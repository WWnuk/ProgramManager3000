#:kivy 2.1.0

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            rows: 1
            cols: 4
            size_hint_y: None
            Button:
                text: 'Settings'
                on_press: root.manager.current = 'settings'
                size_hint_x: None
                width: 100
            TextInput:
                id: search_field_id
                multiline: False
                text: ''
                hint_text: 'Enter program name!'
                padding_y: 40
                padding_x: 50
            Button:
                text: 'Search'
                size_hint_x: None
                width: 100
                on_press: root.get_search_results_from_database()
            Button:
                text: 'Download selected'
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            bar_width: 20
            GridLayout:
                cols: 3
                row_default_height: 40
                padding: 0,70,0,0
                id: search_result_id
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                Label:
                    text: 'Program'
                    size_hint_x: 0.9
                Label:
                    text: ''
                    size_hint_x: 0.05
                Label:
                    text: ''
                    size_hint_x: 0.05


                




            

<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to main'
            on_press: root.manager.current = 'main'