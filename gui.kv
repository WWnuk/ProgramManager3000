#:kivy 2.1.0

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            rows: 1
            cols: 6
            size_hint_y: None
            # Button:
            #     text: 'Show history'
            #     on_press: root.manager.current = 'history'
            #     size_hint_x: 0.1
            TextInput:
                id: search_field_id
                multiline: False
                text: ''
                hint_text: 'Enter program name!'
                padding_y: 40
                padding_x: 50
                size_hint_x: None
                width: 400
            Button:
                text: 'Search'
                size_hint_x: 0.1
                on_press: root.get_search_results_from_database()
            Button:
                text: 'Install selected'
                on_press: root.install_selected()
                size_hint_x: 0.2
            Button:
                text: 'Add entry'
                size_hint_x: 0.2
                on_press: root.add_new_program()
            Button:
                text: 'Remove selected entry'
                size_hint_x: 0.2
                on_press: root.remove_program_entry()
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            bar_width: 20
            GridLayout:
                cols: 4
                row_default_height: 200
                padding: 0,70,0,0
                id: search_result_id
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                Label:
                    text: ''
                    size_hint_x: 0.05
                Label:
                    markup: True
                    font_size: '20sp'
                    size_hint_x: 0.75
                Label:
                    text: ''
                    size_hint_x: 0.05
                Label:
                    text: ''
                    size_hint_x: 0.15


<PopupWindowEdit>:
    GridLayout:
        rows: 2
        TextInput:
            id: textinput_id
        Button:
            text: 'Save changes'
            size_hint_y: 0.3
            on_press: root.save_changes_to_database()

<PopupWindowAdd>:
    GridLayout:
        rows: 2
        TextInput:
            id: textinput_id
        Button:
            text: 'Save changes'
            size_hint_y: 0.3
            on_press: root.save_changes_to_database()




            

<HistoryScreen>:
    BoxLayout:
        Button:
            text: 'History'
        Button:
            text: 'Back'
            on_press: root.manager.current = 'main'